= simple_form_for @comment do |f|
  = f.error_notification
  .form-inputs
    = f.input :user_name, label: 'Name', placeholder: 'Required field'
    = f.input :body, placeholder: 'Please, leave your comment', label: false, :input_html => { :rows => 6 }
    = f.hidden_field :hotel_id
    = f.simple_fields_for :rating, @comment.rating do |p|
      = p.input :hotel_id, as: :hidden
      = p.input :user_id, as: :hidden
      = p.input :comment_id, as: :hidden
      = p.input :score, as: :select, collection: (1..5).to_a, label: 'Rating', include_blank: false
  .form-actions
    = f.button :submit
