<%= simple_form_for @comment do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_name %>
    <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
    <%= f.hidden_field :hotel_id %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
