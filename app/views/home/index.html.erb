<h1>Top rated hotels</h1>
<% @hotels.each do |hotel| %>
<div class="container">
  <h4><%= link_to hotel.title, hotel %></h4>
  <div class="hotel">
    <%= image_tag hotel.photo_url(:thumb) if hotel.photo.present?%>
  </div>
    <div class="one">
    <h3>Comments</h3>
    <% hotel.comments.each do |comment| %>
      <strong><%= comment.user_name %></strong><br />
      <p><%= comment.body %></p>
      <% end %>
      <p style="clear:left"></p>
    </div>
<% end %>
</div>
