<h1>Top rated hotels</h1>
<div class="container">
<% @hotels.each do |hotel| %>
  <h4><%= link_to hotel.title, hotel %></h4><div id="star"></div>
  <div class="hotel">
    <%= image_tag hotel.photo_url(:thumb) if hotel.photo.present?%>
  </div>
  <div class="one">
  <h3>Comments</h3>
  <% hotel.comments.each do |comment| %>
    <strong><%= comment.user_name %></strong><br />
    <p><%= truncate(strip_tags(comment.body), length:100) %></p>
    <% end %>
    <p style="clear:left"></p>
  </div>
<% end %>
</div>

<script>
  $('#star').raty({
    click: function(score, evt) {
      $('#star').raty('readOnly', true);
    },
    targetType : 'score',
    targetKeep : true,
    path: '/assets'
      });
</script>
