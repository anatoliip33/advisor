<%= simple_form_for(@adress) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :country, collection: Country.all, as: :select %>
    <%= f.input :state %>
    <%= f.input :city %>
    <%= f.input :street %>
    <%= f.hidden_field :hotel_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
