<%= simple_form_for @rating do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :hotel_id, as: :hidden %>
    <%= f.input :user_id, as: :hidden %>
    <%= f.input :score, as: :select, collection: (1..5).to_a %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
