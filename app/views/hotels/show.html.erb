<div>
  <div>
    <%= image_tag(@hotel.photo_url, :width => "60%") if @hotel.photo.present? %>
  </div>

  <div class="description">
    <div><b>Title: </b><h4><strong><%= @hotel.title %></strong></h4></div>
    <div><b>Room Description: </b>
      <div><%= @hotel.description %></div>
    </div>
     <div class="break">
      <label>Breakfast:</label>
      <%= @hotel.breakfast ? 'yes' : 'no' %>
    <div>
    <label>Price:</label>
      <span class="price"><%= number_to_currency(@hotel.price) %>|per_day</span>
    </div>
    </div>
     <p>
      <%= link_to 'Edit', edit_hotel_path(@hotel) %> |
      <%= link_to 'Destroy', @hotel, confirm: 'Are you sure?', method: :delete %> |
      <%= link_to 'Back', hotels_path %>
     </p>
     <h4><strong style="color:brown">Adress</strong></h4>
      <label>Country:</label>
      <span><%= @hotel.adress.country %></span><br>
      <label>State:</label>
      <span><%= @hotel.adress.state %></span><br>
      <label>City:</label>
      <span><%= @hotel.adress.city %></span><br>
      <label>Street:</label>
      <span><%= @hotel.adress.street %></span>
    <h4><strong>Comments</strong></h4>
    <% @comments.each do |comment| %>
      <div>
        <strong><%= comment.user_name %></strong>
        <br />
        <p><%= comment.body %></p>
        <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
    <%= render 'comments/form' %>
    <%= render 'ratings/form' %>

      <%= link_to 'Back', hotels_path, :class => "btn btn-success" %>
  </div>
</div>
