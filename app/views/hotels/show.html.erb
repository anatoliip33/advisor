<div class="row">
  <div class="span9">
    <%= image_tag(@hotel.photo_url, :width => "100%") if @hotel.photo.present? %>
  </div>

  <div class="span3">
    <p><b>Name: </b><%= @hotel.title %></p>
    <p><b>Description: </b><%= @hotel.description %></p>
    <h3>Comments</h3>
    <% @comments.each do |comment| %>
      <div>
        <strong><%= comment.user_name %></strong>
        <br />
        <p><%= comment.body %></p>
        <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
    <%= render 'comments/form' %>
    <p>
      <%= link_to 'Edit', edit_hotel_path(@hotel) %> |
      <%= link_to 'Destroy', @hotel, confirm: 'Are you sure?', method: :delete %> |
      <%= link_to 'Back', hotels_path %>
    </p>
  </div>
</div>
