<div class="row">
  <div class="span9">
    <%= image_tag(@hotel.photo_url, :width => "100%") if @hotel.photo.present? %>
  </div>

  <div class="span3">
    <p><b>Name: </b><%= @hotel.title %></p>
    <p><b>Description: </b><%= @hotel.description %></p>
    <p>
      <%= link_to 'Edit', edit_hotel_path(@hotel) %> |
      <%= link_to 'Destroy', @hotel, confirm: 'Are you sure?', method: :delete %> |
      <%= link_to 'Back', hotels_path %>
    </p>
  </div>
</div>
